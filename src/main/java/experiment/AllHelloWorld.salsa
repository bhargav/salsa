	String argFibonacci[] = new String[] {fibArg.toString()};
	Nqueens nqueens = new Nqueens();
	Fibonacci fib = new Fibonacci(iter * 2);
	
	for(int i = 0; i < iter; i++)
	{
		worlds[i] = new HelloWorld1();
	}

	int count = 0;
	while(count < iter * 3)
	{
		count++;
		for(int i = 0; i < iter; i++)
		{
/*
			if(i == 0)
			{
