			}

			join {
				worlds[i] <- helloworld():delay(new Integer(4000));
				nqueens <- act(args):delay(new Integer(3000));
			} @ currentContinuation;
			starter <- act(args);
*/
			pump(worlds[i], nqueens, argNqueens, fib, argFibonacci, count, i, iter * 3 * iter);
		}
	}
    }
}
